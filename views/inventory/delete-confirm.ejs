<h1><%= title %></h1>
<%- messages() %>
<% if (errors) { %>
<ul class="notice">
<% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
<%  }) %>
</ul>
<% } %>
<div class="delete-container">
    <div class="delete-card">
        <form id="deleteForm" class="delete-form" name="delete-inventory-form" action="/inv/delete" method="post">
            <p>ï¼ŠConfirm Deletion - The delete is permanent.</p>

            <label for="inv_make">Make</label>
            <input type="text" id="inv_make" name="inv_make" required readonly
                placeholder="Min of 3 character" pattern="[A-Za-z0-9]{3,}" 
                value="<%= locals.inv_make %>"
            >

            <label for="inv_model">Model</label>
            <input type="text" id="inv_model" name="inv_model" required readonly
                placeholder="Min of 3 character" pattern="[A-Za-z0-9]{3,}"
                value="<%= locals.inv_model %>"
            >

            <label for="inv_price">Price</label>
            <input type="number" id="inv_price" name="inv_price" required readonly
                value="<%= locals.inv_price %>"
                placeholder="decimal or integer" min="0" step="0.01"
            >

            <label for="inv_year">Year</label>
            <input type="number" id="inv_year" name="inv_year" required readonly
                value="<%= locals.inv_year %>"
                placeholder="4-digit year" min="1900" max="2099"
            >

            <input type="hidden" name="inv_id"
            <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
            <% } %>>

            <button type="submit">DELETE</button>
        </form>
    </div>
</div>
